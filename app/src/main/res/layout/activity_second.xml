<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_margin="10dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@android:color/transparent"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context=".SecondActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/flag" />
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>


        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn"
            android:backgroundTint="@android:color/transparent" />

        <View
            android:id="@+id/view33"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#d7d7d7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">


            <Button
                android:id="@+id/spBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:gravity="top|left"
                android:padding="8dp"
                android:text="스포츠 \n 축구,농구,풋살 \n 매치는 이곳에"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:backgroundTint="@null"
                app:strokeColor="#FFFFFF">


            </Button>

            <Button
                android:id="@+id/espBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:gravity="top|left"
                android:padding="8dp"
                android:text="E-스포츠\n롤,피파, 오버워치 등\n E-스포츠 매치"
                android:textColor="@color/black"
                android:textSize="13dp"
                app:backgroundTint="@null" />

        </LinearLayout>

        <Button
            android:id="@+id/addteamBtn"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/btn"
            android:gravity="top|left"
            android:padding="10dp"
            android:text="팀원 구하기\n 좋은 팀원을 구하고 싶으면 좋은 매너로 "

            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/recordBtn"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:gravity="top|left"
                android:padding="10dp"
                android:text="전적보기"
                android:textColor="@color/white"
                android:textColorHighlight="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#73baff" />

            <Button
                android:id="@+id/comBtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:gravity="top|left"
                android:padding="10dp"
                android:text="커뮤니티"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="#73baff" />

        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="#d7d7d7" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top|left"
                    android:text="Flag"
                    android:textColor="#73baff"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="엔 지금 어떤 매치가?"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="우리학교"
                    android:textColor="#689F38"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" 진행중인 매치"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>


        </LinearLayout>

